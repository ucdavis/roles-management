# README: Move this file to database.yml (remove the .example)
#         and set the values correctly for your environment.

# SQLite version 3.x
#   gem install sqlite3
development:
  adapter: sqlite3
  database: db/development.sqlite3
  pool: 5
  timeout: 5000

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  adapter: sqlite3
  database: db/test.sqlite3
  pool: 5
  timeout: 5000

production:
  adapter: sqlite3
  database: db/production.sqlite3
  pool: 5
  timeout: 5000

ldap:
  base_dn: dn
  base_pw: pw

ad_people:
  host: ad.domain.com
  user: cn=admin,dc=ad,dc=domain,dc=com
  pass: secret
  base: ou=people,dc=ad,dc=domain,dc=com
  
ad_groups:
  host: ad.domain.com
  user: cn=admin,dc=ad,dc=domain,dc=com
  pass: secret
  base: ou=groups,dc=ad,dc=domain,dc=com
